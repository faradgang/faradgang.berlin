---
export interface Props {
  text: string;
  href: string;
}

const { href, text } = Astro.props;
---

<div class="floating_menu">
  <a href={href}>
    <button class="floating_button">{text}</button>
  </a>
</div>

<style>
  .floating_menu {
    position: fixed;
    top: 40px;
    right: 10vw;
  }

  .floating_button {
    background-color: rgb(var(--accent));
    color: rgb(var(--background-color));
    width: calc(6rem + 6vw);
    height: calc(6rem + 6vw);
    border-radius: 50%;
    font-size: calc(1.5rem + 2vw);
    text-align: center;
    font-weight: bold;
    rotate: 15deg;
    border: 2px solid black;
    transition: 0.1s ease-in;
    box-shadow: 2px 2px 3px #383838;
  }

  .floating_button:hover {
    text-decoration: underline;
    cursor: pointer;
    rotate: 0deg;
    transition: 0.1s ease-in;
  }

  ul {
    list-style: none;
  }
</style>
